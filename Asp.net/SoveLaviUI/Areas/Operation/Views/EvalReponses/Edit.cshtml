@model BOL.tbl_EVAL_REPONSE

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-6">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Editer Évaluation Réponse</h3>
                </div>
                <div class="box-body">

                    @using (Html.BeginForm("Edit", "EvalReponse", FormMethod.Post))

                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.id)

                            <div class="form-group">
                                @Html.LabelFor(model => model.reponseId, "Réponse", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownList("reponseId", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.reponseId, "Champ requis", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.niveauId, "Niveau", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownList("niveauId", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.niveauId, "Champ requis", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.commentaires, "Commentaires", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.commentaires, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.commentaires, "Champ requis", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="box-footer">
                                <input type="submit" value="Enregistrer" class="btn btn-primary" />
                            </div>

                            <div  class="box-footer">
                                @Html.ActionLink("Retourner à la liste", "Index")
                            </div>

                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
