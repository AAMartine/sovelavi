@model BOL.tbl_TYPE_REPONSE

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="content">
      <div class="row">
        <!-- left column -->
        <div class="col-md-6">
          <!-- general form elements -->
          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Ajouter Type Réponse</h3>
            </div>            
    <div class="box-body">
      @using (Html.BeginForm("Create", "TypeReponse", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
             <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.nom, "Nom", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.nom, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.nom, "Champ requis", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="box-footer">
                        <input type="submit" value="Ajouter" class="btn btn-primary" />
                </div>
            </div>
         }
    </div>
    </div>
    </div>
    </div> 
</section>